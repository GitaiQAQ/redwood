{
    "include": ["src"],
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "module": "commonjs",
        "outDir": "dist/main",
        "rootDir": "src",
        "sourceMap": false,
        "target": "es6",
        "jsx": "react",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "stripInternal": true,
        "types": ["node"]
    }
}
