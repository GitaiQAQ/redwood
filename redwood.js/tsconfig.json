{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "outDir": "dist/main",
    "rootDir": "src",
    "sourceMap": false,
    "target": "ES2015",
    "jsx": "react",

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,

    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  }
}